{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
   <div class="col-md-4">
       <form>
           <div class="form-group">
               <label for="id">글번호</label>
               <input type="text" class="form-control" id="id"value="{{memories.id}}" readonly>
           </div>
           <div class="form-group">
               <label for="kinds">종류</label>
               <input type="text" class="form-control" id="kinds" value="{{memories.kinds}}">
           </div>
           <div class="form-group">
               <label for="place">장소명</label>
               <input type="text" class="form-control" id="place" value="{{memories.place}}">
           </div>
           <div class="form-group">
               <label for="address">주소</label>
               <input type="text" class="form-control" id="address" value="{{memories.address}}">
           </div>
           <div class="form-group">
               <label for="explanation">설명</label>
               <textarea class="form-control" id="explanation">{{memories.explanation}}</textarea>
           </div>
       </form>
       <a href="/" role="button" class="btn btn-secondary">취소</a>
       <button type="button" class="btn btn-primary" id="btn-update">수정</button>
       <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
   </div>
</div>

{{>layout/footer}}